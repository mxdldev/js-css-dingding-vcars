<view class="car-group-body">
  <block a:for="{{cargroup}}">
    <list-item class="list-item" onClick="onItemClick" data-car-group="{{item}}">
      <view class="car-group-item">
        <view class="left">
          <image mode="scaleToFill" src="/images/group_icon_avatar.png"/>
        </view>
        <view class="middle">
          <text>{{item.GroupName}}</text>
          <text>组车管员：{{item.UserName}}</text>
        </view>
        <view class="right" onTap="onAddCarGroup">
          <text>加入</text>
        </view>
      </view>
      <view class="list-item-border">
      </view>
    </list-item>
  </block>
</view>